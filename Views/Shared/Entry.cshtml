<script type="text/javascript">
    GetAllProjects();
    GetAllProjectItems();
    GetAllUsers();

    //Get total number of projects
    function GetAllProjects() {

        $.ajax({
            url: "/Dashboard/GetAllProjects",
            type: "POST",
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (projects) {
                if (projects != null || projects != "") {
                    $("#projectsTotal").text(projects);
                }
            },
            error: function (er) {
                alert(er);
            }
        });
    }

    //Get total number of project items
    function GetAllProjectItems() {

        $.ajax({
            url: "/Dashboard/GetAllProjectItems",
            type: "POST",
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (projects) {
                if (projects != null || projects != "") {
                    $("#projectItemsTotal").text(projects);
                }
            },
            error: function (er) {
                alert(er);
            }
        });
    }

    //Get total number of users
    function GetAllUsers() {

        $.ajax({
            url: "/User/GetAllUsers",
            type: "POST",
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            data: JSON.stringify({ id: 0 }),
            success: function (users) {
                if (users != null || users != "") {
                    $("#usersTotal").text(users.length);
                }
            },
            error: function (er) {
                alert(er);
            }
        });
    }
</script>
